<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>registraProducto</servlet-name>
        <servlet-class>controller.registraProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>muestraProductos</servlet-name>
        <servlet-class>controller.muestraProductos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registraProducto</servlet-name>
        <url-pattern>/registraProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>muestraProductos</servlet-name>
        <url-pattern>/muestraProductos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
